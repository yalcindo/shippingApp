extends layout

block content
	.container	
		form.messenger-form 
			.form-group.col-md-3
				input.form-control.input-name(name="name", type="text", placeholder="Name")
			.form-group.col-md-3
				input.form-control.input-origin(name="origins", type="text", placeholder="Origins")
			.form-group.col-md-3
				input.form-control.input-dest(name="destinations", type="text", placeholder="Destinations")
			.form-group.col-md-3
				input.form-control.input-photo(name="photo", type="text", placeholder="Photo url")		
			.col-md-3.col-md-offset-3
				button.btn-messenger.btn.btn-primary.btn-large(type="button") Submit


	link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css")
